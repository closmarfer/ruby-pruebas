<!DOCTYPE html>
<html>
<head>
  <title><%= @titulo_general %> | Covirán</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "bootstrap.min", media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header id="cabecera-general">
	<div class="jumbotron">
		<div class="container">
			<%= link_to image_tag("logo.png", alt: "Logo Covirán"), root_path, title: "Volver al inicio", "data-toggle":"tooltip", "data-placement": "right" %>
			<div class="row">
				<div class="col-xs-12">
					<ul class="nav nav-tabs">
						<li>
							<%= link_to "Quiénes somos", quienes_somos_url %>
						</li>
						<li>
							<%= link_to "Contacto", contacto_url %>
						</li>
						<% if session[:carrito] %>
						<li>
							
							<%= link_to_unless_current (raw "<i class='glyphicon glyphicon-shopping-cart'></i> Ver carrito"), carro_url %>
						</li>
						<li>
							<%= link_to_unless_current (raw "Vaciar carrito"), vaciar_carro_url %>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
	
</header>
<div id="contenido" class="container">
	<% if notice %>
		<div class="alert alert-success"><%= notice.html_safe %></div>
	<% end %>
	<%= yield %>
</div>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
